{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": "eslint:recommended",
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly",
        "pako": "readonly",
        "EventEmitter": "readonly",
        "Mousetrap": "readonly",
        "d3": "readonly",
        "C2S": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "rules": {
        "no-unused-vars": ["error", { "vars": "all", "varsIgnorePattern": "^_", "args": "after-used", "ignoreRestSiblings": false }],
        "no-constant-condition": ["error", { "checkLoops": false }]
    }
}
